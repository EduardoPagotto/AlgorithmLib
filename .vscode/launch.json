    "version": "0.2.0",
    "configurations": [
        {
            "name": "HeapTest-gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/heapTest",
            "args": [
                "-p",
                "${workspaceRoot}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "HeapTest-lldb",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/heapTest",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "BitMapFreeTest-gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/bitMapTest",
            "args": [
                "-p",
                "${workspaceRoot}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "BitMapFreeTest-lldb",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/bin/bitMapTest",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
    ]
}